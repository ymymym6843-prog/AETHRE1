/* weather.css - Weather Component Styles */

/* Main Weather Card */
.main-weather-card {
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.weather-header {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
}

.weather-header h2 {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text-primary);
    margin: 0;
    letter-spacing: -0.5px;
}

.weather-header p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 5px 0 0 0;
    font-weight: 500;
}

.weather-main-visual {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 20px 0;
}

.weather-icon-large {
    width: 140px;
    height: 140px;
    filter: drop-shadow(0 0 30px rgba(255, 255, 255, 0.4));
    animation: float 6s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }
}

.temp-container {
    display: flex;
    align-items: flex-start;
}

#current-temp {
    font-size: 5.5rem;
    font-weight: 800;
    line-height: 0.9;
    background: linear-gradient(180deg, var(--text-primary), rgba(255, 255, 255, 0.6));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -2px;
}

[data-theme="light"] #current-temp {
    background: linear-gradient(180deg, var(--text-primary), rgba(0, 0, 0, 0.5));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.unit {
    font-size: 2.5rem;
    font-weight: 400;
    margin-top: 10px;
    color: var(--text-secondary);
}

/* Weather Details Grid */
.weather-details-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
    margin-top: auto;
}

.detail-item {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    padding: 15px 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    transition: all 0.3s ease;
}

[data-theme="light"] .detail-item {
    background: rgba(255, 255, 255, 0.5);
    border-color: rgba(0, 0, 0, 0.05);
}

.detail-item:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
}

.detail-item .label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-bottom: 6px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
}

.detail-item .value {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
}

.sub-text {
    font-size: 0.7rem;
    color: var(--text-secondary);
    margin-top: 2px;
}

.wind-visual {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
}

#wind-direction {
    font-size: 1.2rem;
    display: inline-block;
    transition: transform 0.5s ease;
    color: var(--accent-color);
}

.humidity-visual {
    width: 8px;
    height: 24px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    position: relative;
    overflow: hidden;
    margin-top: 5px;
}

[data-theme="light"] .humidity-visual {
    background: rgba(0, 0, 0, 0.05);
}

.droplet {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0%;
    background: var(--accent-color);
    transition: height 0.5s ease;
    border-radius: 10px;
}

.badge {
    font-size: 0.75rem;
    padding: 3px 8px;
    border-radius: 12px;
    font-weight: 700;
    margin-top: 5px;
    border: 1px solid transparent;
}

/* Hourly Forecast */
.hourly-scroll-container {
    display: flex;
    overflow-x: auto;
    gap: 12px;
    padding-bottom: 10px;
    scrollbar-width: none;
}

.hourly-scroll-container::-webkit-scrollbar {
    display: none;
}

.hourly-item {
    min-width: 75px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 15px 10px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    transition: all 0.3s ease;
}

[data-theme="light"] .hourly-item {
    background: rgba(255, 255, 255, 0.5);
    border-color: rgba(0, 0, 0, 0.05);
}

.hourly-item:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-3px);
}

.hourly-item .time {
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-weight: 500;
}

flex-direction: column;
gap: 10px;
}

.forecast-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 20px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 16px;
    transition: background 0.2s ease;
}

[data-theme="light"] .forecast-item {
    background: rgba(255, 255, 255, 0.5);
}

.forecast-item:hover {
    background: rgba(255, 255, 255, 0.08);
}

.forecast-item .day {
    width: 60px;
    font-weight: 600;
    color: var(--text-primary);
}

.forecast-item .icon {
    font-size: 1.4rem;
}

.forecast-item .temp {
    font-weight: 700;
    font-size: 1.1rem;
}

.lifestyle-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
}

.lifestyle-item {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 20px;
    padding: 18px;
    display: flex;
    align-items: center;
    gap: 15px;
    transition: transform 0.3s ease;
}

[data-theme="light"] .lifestyle-item {
    background: rgba(255, 255, 255, 0.5);
}

.lifestyle-item:hover {
    transform: translateY(-2px);
}

.lifestyle-item .icon {
    font-size: 1.8rem;
}

.lifestyle-item .info {
    display: flex;
    flex-direction: column;
}

.lifestyle-item .label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
}

.lifestyle-item .value {
    font-size: 1.1rem;
    font-weight: 700;
    margin-top: 2px;
}

.lifestyle-item .status {
    font-size: 0.7rem;
    color: var(--accent-color);
    font-weight: 600;
    margin-top: 2px;
}

.clothing-content {
    display: flex;
    align-items: center;
    gap: 25px;
    padding: 10px;
}

.clothing-icon {
    font-size: 3.5rem;
    filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.1));
}

#clothing-text {
    font-size: 1.1rem;
    line-height: 1.5;
    color: var(--text-secondary);
    font-weight: 500;
}

.city-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.city-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

[data-theme="light"] .city-item {
    border-bottom-color: rgba(0, 0, 0, 0.05);
}

.city-item:last-child {
    border-bottom: none;
}

.city-item .name {
    font-weight: 600;
}

.city-item .temp {
    font-weight: 700;
}

/* Sky View Cards */
.celestial-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
    height: 100%;
}

.sun-times {
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
}

.time-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sun-visual {
    position: relative;
    height: 140px;
    margin-top: 10px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.arc-bg {
    width: 220px;
    height: 110px;
    border: 2px dashed rgba(255, 255, 255, 0.2);
    border-bottom: none;
    border-radius: 110px 110px 0 0;
    position: absolute;
    bottom: 0;
}

[data-theme="light"] .arc-bg {
    border-color: rgba(0, 0, 0, 0.1);
}

.arc-progress {
    width: 0%;
    height: 4px;
    background: var(--accent-color);
    position: absolute;
    bottom: 0;
    left: 50%;
    display: none;
}

.sun-marker {
    position: absolute;
    font-size: 2rem;
    transform: translate(-50%, 50%);
    filter: drop-shadow(0 0 15px rgba(255, 200, 0, 0.6));
}

.moon-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 160px;
    font-size: 5rem;
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.3));
}

.moon-details {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.moon-phase-name {
    font-size: 1.3rem;
    font-weight: 700;
}

.moon-age {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.planet-list,
.constellation-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.celestial-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 16px;
}

[data-theme="light"] .celestial-item {
    background: rgba(255, 255, 255, 0.5);
}

.celestial-item .name-container {

    .celestial-item .status {
        font-size: 0.8rem;
        padding: 4px 10px;
        border-radius: 10px;
        font-weight: 600;
    }

    .celestial-item .status.visible {
        background: rgba(76, 175, 80, 0.15);
        color: #4CAF50;
    }

    .celestial-item .status.hidden {
        background: rgba(158, 158, 158, 0.15);
        color: #9E9E9E;
    }

    .celestial-item .time,
    .celestial-item .season {
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    /* Constellation Animation - Stars Move First, Then Lines Draw */
    .constellation-container {
        width: 100%;
        height: 180px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .constellation-svg {
        width: 100%;
        height: 100%;
        overflow: visible;
    }

    .star {
        fill: #FFD700;
        filter: drop-shadow(0 0 8px #FFD700) drop-shadow(0 0 12px #FFA500);
        animation: starMove 2s ease-out forwards, twinkle 2s 2s infinite ease-in-out alternate;
        transform-origin: center;
    }

    .star:nth-child(1) {
        animation-delay: 0s, 2.5s;
    }

    .star:nth-child(2) {
        animation-delay: 0.2s, 2.7s;
    }

    .star:nth-child(3) {
        animation-delay: 0.4s, 2.9s;
    }

    .star:nth-child(4) {
        animation-delay: 0.6s, 3.1s;
    }

    .star:nth-child(5) {
        animation-delay: 0.8s, 3.3s;
    }

    @keyframes starMove {
        0% {
            opacity: 0;
            transform: translate(var(--start-x, 0), var(--start-y, 0)) scale(0.3);
        }

        100% {
            opacity: 1;
            transform: translate(0, 0) scale(1);
        }
    }

    @keyframes twinkle {
        0% {
            opacity: 0.6;
            transform: scale(0.9);
            filter: drop-shadow(0 0 6px #FFD700) drop-shadow(0 0 10px #FFA500);
        }

        100% {
            opacity: 1;
            transform: scale(1.3);
            filter: drop-shadow(0 0 12px #FFD700) drop-shadow(0 0 18px #FFA500);
        }
    }

    .constellation-line {
        stroke: rgba(255, 215, 0, 0.7);
        stroke-width: 1.5;
        stroke-linecap: round;
        stroke-dasharray: 1000;
        stroke-dashoffset: 1000;
        opacity: 0;
        animation: lineAppear 0.5s 2s ease-out forwards, drawLine 3s 2.5s ease-out forwards;
        filter: drop-shadow(0 0 4px rgba(255, 215, 0, 0.5));
    }

    [data-theme="light"] .constellation-line {
        stroke: rgba(255, 165, 0, 0.8);
        filter: drop-shadow(0 0 3px rgba(255, 165, 0, 0.4));
    }

    @keyframes lineAppear {
        to {
            opacity: 1;
        }
    }

    @keyframes drawLine {
        to {
            stroke-dashoffset: 0;
        }
    }

    .zodiac-name {
        position: absolute;
        bottom: 10px;
        font-size: 1.2rem;
        font-weight: 700;
        color: #FFD700;
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.6), 0 0 20px rgba(255, 165, 0, 0.4);
        opacity: 0;
        animation: fadeIn 0.5s 3s ease-out forwards;
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }

    /* Meteor Card */
    .meteor-content {
        display: flex;
        flex-direction: column;
        gap: 15px;
        position: relative;
        overflow: hidden;
    }

    .meteor-highlight {
        background: linear-gradient(135deg, rgba(103, 58, 183, 0.4), rgba(63, 81, 181, 0.4));
        border-radius: 20px;
        padding: 25px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 10px 25px rgba(103, 58, 183, 0.2);
        position: relative;
        z-index: 2;
    }

    .shower-name {
        font-size: 1.6rem;
        font-weight: 800;
        display: block;
        margin-bottom: 20px;
        color: #fff;
        text-shadow: 0 0 15px rgba(103, 58, 183, 0.6);
    }

    .meteor-stats {
        display: flex;
        justify-content: space-around;
    }

    .meteor-stats .stat {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .meteor-stats .label {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.8);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .meteor-stats .value {
        font-size: 1.2rem;
        font-weight: 700;
        color: #fff;
    }

    .shooting-star {
        position: absolute;
        top: 0;
        left: 0;
        width: 100px;
        height: 2px;
        background: linear-gradient(90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
        transform: rotate(-45deg);
        animation: shoot 3s infinite ease-in-out;
        opacity: 0;
        z-index: 1;
    }

    @keyframes shoot {
        0% {
            transform: translate(-50px, -50px) rotate(-45deg);
            opacity: 1;
        }

        20% {
            transform: translate(300px, 300px) rotate(-45deg);
            opacity: 0;
        }

        100% {
            transform: translate(300px, 300px) rotate(-45deg);
            opacity: 0;
        }
    }